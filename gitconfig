[user]
	name = freda
	email = pseuyi@gmail.com

[alias]
  co = checkout
  cm = commit -m 
  cn = commit -n -m
  cp = cherry-pick
  ca = commit --amend --no-edit
  fix = commit --fixup
  ra = rebase -i --autosquash
  s = status
  b = branch
  p = push origin HEAD
  pnv = push origin HEAD --no-verify
  pu = push -u origin HEAD
  pf = push -f origin HEAD
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  undo = reset --soft HEAD^
  save = !git add . $1 && git cm save --no-verify $1
  stash-unapply = !git stash show -p | git apply -R
  lo = log --abbrev-commit --oneline -25
  rmb = "!f() { git branch --merged | grep -v "master" | while read i; do git branch -d $i; done; }; f"

[rerere]
  enabled = false
[core]
	editor = /usr/bin/vim
  ignorecase = true
	excludesfile = /Users/freda/.gitignore_global
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
